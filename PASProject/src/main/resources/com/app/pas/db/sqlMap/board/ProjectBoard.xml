<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ProjectBoard">

	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="ProjectBoard" type="com.app.pas.dto.board.ProjectBoardVo" />

	<select id="selectProjectBoardList" resultClass="ProjectBoard">
		SELECT *
		FROM
		PROJECT_BOARD
		ORDER BY PB_ARTICLE_NUM DESC

	</select>

	<select id="selectProjectBoard" parameterClass="int"
		resultClass="ProjectBoard">
		SELECT *
		FROM PROJECT_BOARD
		WHERE PB_ARTICLE_NUM LIKE
		'%'||#pb_Article_Num#||'%'


	</select>

	<insert id="insertProjectBoard" parameterClass="ProjectBoard">
		INSERT INTO
		PROJECT_BOARD(PB_ARTICLE_NUM,PB_CONTENT,PB_WT_MEM,PB_TITLE,PROJ_NUM,
		MEM_EMAIL)
		VALUES(PROJECT_BOARD_SEQ.NEXTVAL,#pb_Content#,#pb_Wt_Mem#,#pb_Title#,#proj_Num#,
		#mem_Email#)

	</insert>


	<update id="updateProjectBoard" parameterClass="ProjectBoard">
		UPDATE
		PROJECT_BOARD SET PB_CONTENT=#pb_Content#, PB_TITLE=#pb_Title#,
		WHERE
		PB_ARTICLE_NUM=#pb_Article_Num#
	</update>

	<delete id="deleteProjectBoard" parameterClass="int">
		DELETE FROM
		PROJECT_BOARD WHERE PB_ARTICLE_NUM=#pb_Article_Num#


	</delete>
</sqlMap>