<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Notice">

	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="Notice" type="com.app.pas.dto.board.NoticeVo" />

	<!-- <select id="selectNoticeList" resultClass="Notice">
		SELECT *
		FROM NOTICE
		ORDER BY NOTICE_NUM DESC

	</select> -->
	

	<select id="selectNotice" parameterClass="int"
		resultClass="Notice">
		SELECT *
		FROM NOTICE
		WHERE PROJ_NUM LIKE '%'||#proj_Num#||'%'


	</select>
	
	<select id="selectNoticeCount" resultClass="int">
	    SELECT COUNT(*) FROM NOTICE
	 </select>
   
   
   
	<insert id="insertNotice" parameterClass="Notice">
		INSERT INTO
		NOTICE(NOTICE_NUM,NOTICE_TITLE,NOTICE_CONTENT,,PROJ_NUM) 
		VALUES(NOTICE_SEQ.NEXTVAL,#notice_Title#,#notice_Content#,#proj_Num#)
		
	</insert>


	<update id="updateNotice" parameterClass="Notice">
		UPDATE NOTICE SET NOTICE_TITLE=#notice_Title#, NOTICE_CONTENT=#notice_Content# 
		WHERE NOTICE_NUM=#notice_Num#
	</update>

	<delete id="deleteNotice" parameterClass="int">
		DELETE FROM NOTICE WHERE NOTICE_NUM=#notice_Num#


	</delete>

</sqlMap>