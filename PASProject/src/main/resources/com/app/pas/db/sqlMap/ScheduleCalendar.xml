<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ScheduleCalendar">

   <typeAlias alias="str" type="java.lang.String" />
   <typeAlias alias="int" type="java.lang.Integer" />
   
   
   
   <select id="selectScheduleCalendarList" parameterClass="int" resultClass="ScheduleCalendar" >
      select * from Schedule_Calendar where sc_proj_num= #sc_Proj_Num#
   </select>
   
   <update id="insertScheduleCalendar" parameterClass="ScheduleCalendar">
      insert into Schedule_Calendar(SC_NUM,SC_START_DATE,SC_END_DATE,SC_TITLE,SC_COLOR,SC_WK_NAME,SC_WK_MEM_EMAIL,SC_PROJ_NUM) 
	  VALUES(SCHEDULE_CALENDAR_SEQ.nextval,#sc_Start_Date#,#sc_End_Date#,#sc_Title#,#sc_Color#,#sc_Wk_Name#,#sc_Wk_Mem_Email#,#sc_Proj_Num#)
   </update>
    
   <update id="deleteScheduleCalendar" parameterClass="int">
      delete from Schedule_Calendar where SC_NUM=#sc_Num#
   </update>
   
</sqlMap>